#include "push_swap.h"

int	is_empty(t_stack *stack)
{
	return (stack->top == NULL);
}

void	free_stack(t_stack *stack)
{
	while (!is_empty(stack))
	{
		pop(stack);
	}
}

int	stack_size(t_stack *stack)
{
	int		size;
	t_node	*current;

	size = 0;
	current = stack->top;
	while (current != NULL)
	{
		size++;
		current = current->next;
	}
	return (size);
}
